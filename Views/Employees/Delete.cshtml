<header class="header1 d-flex justify-content-center">
    <h1 class="text-light">UsersCorp</h1>
</header>
<div>
    <div class="d-flex justify-content-between">
        <a class="button1">Index</a>
        <a class="button1">Log Out</a>
    </div>
    <div>
        <div class="d-flex justify-content-center">
            <h2>Delete User</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title d-flex mt-5 justify-content-center">Are you sure to delete this user?</h5>
            <form asp-action="confirmDelete" class="d-flex flex-column mt-3 align-items-center">
                <div>
                    <p type="text" id="name" name="name">@Model.Name</p>
                </div>
                <div>
                    <p type="text" id="lastname" name="lastname">@Model.LastNames</p>
                </div>
                <div>
                    <p type="text" id="email" name="email">@Model.Email</p>
                </div>
                <div>
                    <p type="phone" id="phone" name="phone" >@Model.Phone</p>
                </div>
                <div class="d-flex flex-column mt-3 align-items-center" >
                    <a class="button1 mt-2" asp-action="Details" asp-route-id="@Model.Id">Back</a>
                    <a class="button1" asp-action="confirmDelete" asp-route-id="@Model.Id">Delete</a>
                </div>
            </form>
        </div>
    </div>   
</div>