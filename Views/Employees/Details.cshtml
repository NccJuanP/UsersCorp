<header class="header1 d-flex justify-content-center">
    <h1 class="text-light">UsersCorp</h1>
</header>
<div>
    <div class="d-flex justify-content-between">
        <a class="button1a mx-2 " asp-controller="Employees" asp-action="Index">Index</a>
        <a class="button1a mx-2 " asp-controller="Uservalidations" asp-action="Logout">Log Out</a>
    </div>
    <div>
        <div class="d-flex justify-content-center">
            <h2>Details</h2>
        </div>
        <div class="card-body">
            <div class="d-flex flex-column mt-3 align-items-center">
                <div class="card4">
                    <form method="post" class="d-flex flex-column mt-3 align-items-center">
                        <div>
                            <img class="img1" src="/images/perfil.jpg" alt="imagen">
                        </div>
                        <div>
                            <p type="text" id="name" name="name">@ViewData["name"]</p>
                        </div>
                        <div>
                            <p type="text" id="lastname" name="lastname">@ViewData["Lastnames"]</p>
                        </div>
                        <div>
                            <p type="text" id="email" name="email"> @ViewData["email"]</p>
                        </div>
                        <div>
                            <p type="phone" id="phone" name="phone">@ViewData["phone"]</p>
                        </div>
                        <div class="d-flex flex-column mt-3 align-items-center">
                            <a class="button2d mt-2" asp-controller="Employees" asp-action="Update" asp-route-id="@ViewData["id"]">Update</a>
                            <a class="button4" asp-controller="Employees" asp-action="Delete" asp-route-id="@ViewData["id"]">Delete</a>
                        </div>
                    </form>
                </div>
            </div>
            <h2 class="card-title d-flex mt-5 justify-content-center">DataTime History</h5>
                <div class="d-flex justify-content-center">
                    <div class="d-flex flex-column mt-3 align-items-center col-6">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>EntryDate</th>
                                    <th>Check-in Time</th>
                                    <th>ExitDate</th>
                                    <th>DepartureTime</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="table table-striped t1able-hover">
                                        <td>@item.Entries.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Entries.ToString("HH:mm:ss")</td>
                                        @if( item.Exits != null ){
                                        <td>@item.Exits.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Exits.ToString("HH:mm:ss")</td>
                                        }else{
                                            <td>Pendiente salida</td>
                                            <td>pendiente salida</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
    </div>
</div>