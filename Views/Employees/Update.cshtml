@model Sistema.Models.Employee

<header class="header1 d-flex justify-content-center">
    <h1 class="text-light">UsersCorp</h1>
</header>
<div>
    <div class="d-flex justify-content-between">
        <a class="button1a mx-2 " asp-controller="Employees" asp-action="Index">Index</a>
        <a class="button1a mx-2 " asp-controller="Uservalidations" asp-action="Logout">Log Out</a>
    </div>
    <div>
        <div class="d-flex justify-content-center">
            <h2>Update</h2>
        </div>
        <div class="card-body d-flex flex-column mt-3 align-items-center">
            <div class="card3">
            <form asp-controller="Employees" asp-action="confirmUpdate" method="post" class="d-flex flex-column mt-3 align-items-center">
                <div>
                    <input asp-for="Id" class="input1 mt-2" type="hidden" id="name"  placeholder="Name"/>
                </div>
                <div>
                    <input asp-for="Name" class="input1 mt-2" type="text" id="name"  placeholder="Name"/>
                </div>
                <div>
                    <input asp-for="LastNames" class="input1 mt-2" type="text" id="lastname" placeholder="Lastname"/>
                </div>
                <div>
                    <input asp-for="Email" class="input1 mt-2" type="text" id="email"  placeholder="Email"/>
                </div>
                <div>
                    <input asp-for="Phone" class="input1 mt-2" type="text" id="phone"  placeholder="Phone"/>
                </div>

                <div>
                    <input asp-for="Password" class="input1 mt-2" type="text" id="phone"  placeholder="Phone"/>
                </div>
                <div class="d-flex flex-column mt-3 align-items-center" >
                    <button type="submit" class="button2 mt-2">Save</button>
                    <a class="button2 mt-2" asp-controller="Employees" asp-action="Details" asp-route-id="@Model.Id">Back</a>
                </div>
            </form>
        </div>
        </div>
    </div>   
</div>
