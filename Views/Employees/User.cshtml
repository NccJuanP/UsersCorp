<header class="header1 d-flex justify-content-center">
    <h1 class="text-light">UsersCorp</h1>
</header>
<div>
    <div class="d-flex justify-content-between">
        <a class="button1a mx-2 " asp-controller="Employees" asp-action="Index">Index</a>
        <a class="button1a mx-2 " asp-controller="Uservalidations" asp-action="Logout">Log Out</a>
    </div>
    <div>
        <div class="d-flex justify-content-center">
            <h2>Users</h2>
        </div>
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column mt-3 align-items-center col-6">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th>Name</th>
                            <th>Lastname</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                        <tr class="table table-striped t1able-hover">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.LastNames</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                <a class="button1" asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id">Details</a> 

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>